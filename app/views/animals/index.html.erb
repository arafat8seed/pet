<p id="notice"><%= notice %></p>

<h1>MY PETS</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Breed</th>
      <th>Age</th>
      <tr>
      Biography
      </tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%=animal.id%></td>
        <td><strong><%= animal.name %></strong></td>
        <td><%= animal.breed %></td>
        <td><%= animal.age %></td>
        <td><%= animal.created_at.strftime('%b %Y')%></td>
        <td class="btn btn-warning disabled"><%= link_to 'Show', animal %></td>
        <td class="btn btn-basic "><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td class="btn btn-danger disabled"><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

